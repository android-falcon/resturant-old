<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/material_blue_300"
                  android:layout_gravity="center"
                  android:gravity="center">

        <Button
                android:id="@+id/hfButton"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="@string/hf"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/card_background_blue_green"/>

        <Button
                android:id="@+id/ltButton"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="@string/lt"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/card_background_blue_green"/>

        <Button android:id="@+id/noButton"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="@string/no"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/card_background_blue_green"/>

        <Button android:id="@+id/extButton"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="@string/ext"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/card_background_blue_green"/>

    </LinearLayout>

    <GridView
            android:layout_margin="10dp"
            android:id="@+id/grid"
            android:columnWidth="130dp"
            android:numColumns="auto_fit"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

</LinearLayout>