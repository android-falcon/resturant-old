<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="12dp"
        android:clipToPadding="false">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:orientation="vertical">

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="center">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"
                    android:background="@drawable/grey_border_white"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:gravity="center">

                    <TextView
                            android:id="@+id/cash_title"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/cash"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="22sp"/>

                    <EditText
                            android:id="@+id/cash_ed"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/grey_border_white"
                            android:gravity="center"
                            android:padding="16dp"
                            android:inputType="numberDecimal"
                            android:textColor="@color/black"
                            android:textSize="22sp"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:gravity="center">

                    <TextView
                            android:id="@+id/visa_title"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/visa"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>

                    <EditText
                            android:id="@+id/visa_ed"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/grey_border_white"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:gravity="center">

                    <TextView
                            android:id="@+id/master_card_title"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/master_card"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>

                    <EditText
                            android:id="@+id/master_card_ed"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/grey_border_white"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:gravity="center">

                    <TextView
                            android:id="@+id/other_title"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/other"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>

                    <EditText
                            android:id="@+id/other_ed"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/grey_border_white"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:textColor="@color/black"
                            android:imeOptions="actionDone"
                            android:textSize="20sp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:showDividers="middle"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="18dp"
                    android:divider="@drawable/empty_divider">

                <TextView
                        android:id="@+id/one"
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="1"
                        android:background="@drawable/grey_border_gold"
                        android:textColor="@color/black"
                        android:textSize="20sp"/>

                <TextView
                        android:id="@+id/five"
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="5"
                        android:background="@drawable/grey_border_gold"
                        android:textColor="@color/black"
                        android:textSize="20sp"/>

                <TextView
                        android:id="@+id/ten"
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="10"
                        android:background="@drawable/grey_border_gold"
                        android:textColor="@color/black"
                        android:textSize="20sp"/>

                <TextView
                        android:id="@+id/twenty"
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="20"
                        android:background="@drawable/grey_border_gold"
                        android:textColor="@color/black"
                        android:textSize="20sp"/>

                <TextView
                        android:id="@+id/fifty"
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="50"
                        android:background="@drawable/grey_border_gold"
                        android:textColor="@color/black"
                        android:textSize="20sp"/>

                <TextView
                        android:id="@+id/exact"
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/exact"
                        android:background="@drawable/grey_border_gold"
                        android:textColor="@color/black"
                        android:textSize="20sp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:gravity="center">

            <TextView
                    android:id="@+id/total"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/total_title"
                    android:textColor="@color/material_red_400"
                    android:textSize="20sp"/>

            <TextView
                    android:id="@+id/total_amount"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/material_red_400"
                    android:textSize="20sp"/>

        </LinearLayout>

        <View
                android:layout_width="400dp"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@color/material_grey_500"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

            <TextView
                    android:id="@+id/payed"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/payed"
                    android:textColor="@color/material_blue_500"
                    android:textSize="20sp"/>

            <TextView
                    android:id="@+id/payed_amount"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/material_blue_500"
                    android:textSize="20sp"/>

        </LinearLayout>

        <View
                android:layout_width="400dp"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@color/material_grey_500"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

            <TextView
                    android:id="@+id/change"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/change"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

            <TextView
                    android:id="@+id/change_amount"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>