<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:gravity="center"
              android:padding="12dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:id="@+id/blue"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="6dp"
            android:background="@drawable/card_background_blue"/>

    <ImageView
            android:id="@+id/green"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="6dp"
            android:background="@drawable/card_background_green"/>

    <ImageView
            android:id="@+id/yellow"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="6dp"
            android:background="@drawable/card_background_yellow"/>

    <ImageView
            android:id="@+id/red"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="6dp"
            android:background="@drawable/card_background_red"/>

    <ImageView
            android:id="@+id/grey"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="6dp"
            android:background="@drawable/card_background_grey_dark"/>

</LinearLayout>